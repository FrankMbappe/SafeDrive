<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_vehicle_default"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@string/str_vehicle_s_brand_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/brand_color_bmw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_vehicle_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/black"
        android:text="BMW"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/item_vehicle_default"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_vehicle_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:text="M3 U28"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/item_vehicle_default"
        app:layout_constraintTop_toBottomOf="@id/item_vehicle_brand" />

    <TextView
        android:id="@+id/item_vehicle_matricule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:text="LT800BE"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_vehicle_type_image"
        android:contentDescription="@string/str_vehicle_type"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:background="@drawable/ic_car_primary_24dp"
        app:layout_constraintTop_toBottomOf="@id/item_vehicle_matricule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_vehicle_model"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>